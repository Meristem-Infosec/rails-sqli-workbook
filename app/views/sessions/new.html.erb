  <% provide(:title, "Create a Workbook") %>
<div class="container">
  <div class="row">
    <div class="col-l2">
      <h1>Create your own Rails SQL Injection Playground!</h1>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-12">
      <div class="card" style="30px">
        <%= form_for(:session, url: sessions_path, method: :post) do |f| %>
        <div class="card-header">
          Choose a unique word or phrase
        </div>
        <div class="card-body" >
          <%= f.text_field :dbid, size: 30 %>
          <br/><%= f.submit "Create DB", class: "btn btn-primary" %>
        </div>
      <% end %>
      </div>
    </div>

  <div class="row">
    <div class="col-12 gutter">
    </div>
  </div>

  <div class="row">
    <div class="col-5">
      <%= render "layouts/footer" %>
    </div>
  </div>
</div>